<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gjdevera.ocrreader"
    android:installLocation="auto">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="OCR Manager"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name="com.gjdevera.ocrreader.MainActivity"
            android:label="OCR Manager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gjdevera.ocrreader.CaptureActivity" />
        <activity android:name="com.gjdevera.ocrreader.OcrCaptureActivity"></activity>
    </application>

</manifest>